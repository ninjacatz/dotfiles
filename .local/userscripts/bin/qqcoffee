#!/bin/bash
set -eo pipefail
source_dir=$(cd -- "$(dirname -- "$0")" && pwd)
. "$source_dir/../qquser-check"

usage () {
	cat <<EOF
Usage: ${0##*/}
Options:
	on|off
EOF
}

case "$1" in
	on)
		pkill -x xautolock
		rm -f /tmp/xautolock_on
		;;
	off)
		sh -c "$(awk '/xautolock -time/' "$HOME"/.config/bspwm/bspwmrc)"
		touch /tmp/xautolock_on
		;;
	*)
		usage
		exit 1
		;;
esac
